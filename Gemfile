gemspec

# Run all pre-commit hooks via Overcommit during CI runs
gem 'overcommit', '0.62.0'

# Needed for Rake integration tests
gem 'rake'

# Pin tool versions (which are executed by Overcommit) for CI runs
gem 'rubocop', '>= 1', '< 2'

gem 'simplecov', require: false

gem 'rexml'
